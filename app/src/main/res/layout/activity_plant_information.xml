<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plantInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".activities.PlantInformationActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:title="Plant Information"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextAppearance="@style/ToolbarTitleText" />

    <!-- Plant ImageView -->
    <ImageView
        android:id="@+id/plant_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_bg1"
        android:contentDescription="Plant Image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Plant ID EditText -->

    <!-- Plant Name EditText -->

    <EditText
        android:id="@+id/plant_id"
        android:layout_width="374dp"
        android:layout_height="45dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/edit_text_bg1"
        android:hint="Plant ID"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/choose_image_button"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/choose_image_button"
        app:layout_constraintTop_toBottomOf="@id/plant_image_view" />

    <EditText
        android:id="@+id/plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Plant Name"
        android:background="@drawable/edit_text_bg1"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/plant_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Growth Requirement EditText -->
    <EditText
        android:id="@+id/growth_requirement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Growth Requirement"
        android:background="@drawable/edit_text_bg1"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/plant_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Care Instructions EditText -->
    <EditText
        android:id="@+id/care_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Care Instructions"
        android:background="@drawable/edit_text_bg1"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/growth_requirement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/care_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Choose Image Button -->

        <!-- Save Plant Button -->
        <Button
            android:id="@+id/save_plant_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Plant"
            app:cornerRadius="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Update and Delete Buttons -->
    <LinearLayout
        android:id="@+id/updateDeleteLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Update Plant Button -->
        <Button
            android:id="@+id/update_plant_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update Plant"
            app:cornerRadius="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:padding="12dp" />

        <!-- Delete Plant Button -->
        <Button
            android:id="@+id/view_plant_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Plant"
            app:cornerRadius="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:padding="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/choose_image_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:text="Choose Image"
        app:cornerRadius="4dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/plant_id"
        app:layout_constraintEnd_toEndOf="@+id/plant_image_view"
        app:layout_constraintStart_toStartOf="@+id/plant_image_view"
        app:layout_constraintTop_toBottomOf="@+id/plant_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
